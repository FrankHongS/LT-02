<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/product_font_family</item>
        <item name="title">@string/app_title</item>
    </style>

    <style name="NoActionBar1" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/product_font_family</item>
    </style>

    <style name="NoActionBar2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/webviewPrimary</item>
        <item name="colorPrimaryDark">@color/webviewPrimaryDark</item>
        <item name="colorAccent">@color/webviewAccent</item>
        <item name="android:fontFamily">@font/product_font_family</item>
    </style>

    <style name="Theme.AudioRecord.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SapphireImmersiveTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarButtonStyle">@style/SapphireSnackbarButton</item>
        <item name="snackbarStyle">@style/SapphireSnackbar</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SapphireSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SapphireSnackbarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingRight">0dp</item>
    </style>

</resources>
