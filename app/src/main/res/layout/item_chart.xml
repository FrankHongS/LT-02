<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <com.hon.simplechartview.ChartView
        android:id="@+id/testChartView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#aaaaaa"
        app:vertical_translate="0.3"
        app:x_label_text_size="18sp"
        app:y_label_text_size="18sp"
        app:unit_left_padding="12dp"
        app:x_axis_stroke_width="3"
        app:data_line_stroke_width="5"
        app:x_label_text_color="#555"
        app:y_label_text_color="#555"
        app:x_axis_color="#666"
        app:animation_duration="1.5"/>

</androidx.cardview.widget.CardView>