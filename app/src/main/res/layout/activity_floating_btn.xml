<?xml version="1.0" encoding="utf-8"?>
<com.hon.librarytest02.floatingbtn.FloatingButtonContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_container"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/floating_btn_bg"
    android:elevation="10dp">

    <LinearLayout
        android:id="@+id/ll_player_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_player_close" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="17dp"
            app:srcCompat="@drawable/ic_player_next" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="17dp"
            app:srcCompat="@drawable/ic_player_pause" />
    </LinearLayout>

    <com.hon.librarytest02.floatingbtn.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="center_vertical"
        tools:src="@tools:sample/avatars" />
</com.hon.librarytest02.floatingbtn.FloatingButtonContainer>