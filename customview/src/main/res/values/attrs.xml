<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PagingRecyclerView">
        <attr name="placeholderItemHeight" format="dimension" />
        <attr name="invisibleItemCount" format="integer" />
        <attr name="loadingLayout" format="reference" />
        <attr name="errorLayout" format="reference" />
        <attr name="noMoreLayout" format="reference" />
    </declare-styleable>

    <declare-styleable name="LyricsView">
        <attr name="lineHeightRatio" format="float" />
        <attr name="lineHorizontalMargin" format="dimension" />
        <attr name="highlightTextRatio" format="float" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="highlightTextColor" format="color" />
        <attr name="gradientHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundFrameLayout">
        <attr name="radius_f" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RoundConstraintLayout">
        <attr name="radius_c" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DimensionRatioImageView">
        <attr name="dimensionRatio" format="string" />
    </declare-styleable>
</resources>